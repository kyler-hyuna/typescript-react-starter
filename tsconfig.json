{
  "compilerOptions": {
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "@actions": ["actions"],
      "@components": ["components"],
      "@constants": ["constants"],
      "@reducers": ["reducers"],
      "@types": ["types"],
      "@routes": ["routes"]
    }
  },
  "include": ["src"],
  "compileOnSave": false
}
